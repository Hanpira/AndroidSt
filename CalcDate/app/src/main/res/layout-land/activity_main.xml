<?xml version="1.0" encoding="utf-8"?>
<!-- Parent layout as linear layout-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <!-- linear layout to show datepickers-->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/appTitle"
        android:textColor="@color/material_dynamic_primary20"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="8sp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDateBirth"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:gravity="center_vertical"
            android:text="@string/dateStartText"
            android:textColor="@color/material_dynamic_primary20"
            android:textSize="16sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/editDateBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:ems="10"
            android:hint="@string/exampleDate"
            android:inputType="date" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_margin="8sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextDateEnd"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:text="@string/dateEndText"
            android:textColor="@color/material_dynamic_primary20"
            android:textSize="16sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/editDateEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:ems="10"
            android:hint="@string/exampleDate"
            android:inputType="date" />

        <RadioButton
            android:id="@+id/radioBtnToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:text="@string/DateToday"
            android:textColor="@color/material_dynamic_primary20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_margin="8sp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/countAge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:gravity="center_vertical"
            android:text="@string/result"
            android:textColor="@color/material_dynamic_primary20"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"
            android:text=" "
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>


    <Button
        android:id="@+id/bt_birth"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:drawableRight="#7B27B0"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <Button
        android:id="@+id/bt_today"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:drawableRight="#7B27B0"
        android:textColor="@color/black"
        android:textSize="13sp" />


</LinearLayout>
